<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kgf"
    android:outlineProvider="bounds"
    android:outlineSpotShadowColor="#020202"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/signinbu"
        android:layout_width="211dp"
        android:hapticFeedbackEnabled="true"
        android:layout_height="186dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ironman"
        android:gravity="center_vertical"
        android:onClick="verifier"
        android:paddingStart="15pt"
        android:paddingBottom="4pt"
        android:shadowColor="#020202"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="1"
        android:text="Sign in"
        android:textColor="#AE8BF6"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <EditText
        android:id="@+id/login"
        android:layout_width="245dp"
        android:layout_height="51dp"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:hint="Enter username"
        android:inputType="textPersonName"
        android:shadowColor="#070707"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:textColor="#FFFFFF"
        android:textColorHint="#BC9B9B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="245dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:shadowColor="#070707"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:textColor="#FFFFFF"
        android:textColorHint="#BC9B9B"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <TextView
        android:layout_width="352dp"
        android:layout_height="75dp"
        android:layout_marginLeft="15pt"
        android:layout_marginTop="144dp"
        android:lines="2"
        android:shadowColor="#070707"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:text="Sign in Avu Mundhu Tharvatha Alochinchochu Em petano Deentlo"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>